---
import Layout from '../layouts/Layout.astro';
import Autocomplete from '../components/Autocomplete.svelte';
import { getSearchCollection } from '../api';

const searchCollection = await getSearchCollection();
// const searchCollection = [{ name: 'maddy', slug: 'maddy' }];
console.log(searchCollection);
---

<svelte:fragment>
  <div class="relative top-0">
    <div
      class="overflow-hidden -z-50 absolute blur-[200px] w-11/12 left-0 right-0 top-0 mx-auto"
    >
      <div class="h-0 pt-[100vh]">
        <div class="absolute top-0 left-0 w-full h-[150vh]">
          <div
            class="w-full h-full rounded-[50%] bg-gradient-0 from-byz to-silver/20"
          >
          </div>
        </div>
      </div>
    </div>
  </div>
  <Layout title="Alto">
    <div class="flex flex-col relative mt-48 xl:mt-64">
      <h1 class="text-8xl opacity-75 font-serif font-black text-center">
        alto
      </h1>
      <h3 class="text-6xl opacity-75 font-serif font-black text-center">
        Your Grow Guide for Every Green
      </h3>
      <Autocomplete
        client:media="(min-width: 1024px)"
        plants={searchCollection}
      />
    </div>
  </Layout>
</svelte:fragment>
